<div style="margin-top:50px;margin-bottom:30px;line-height:275%;">
    <h1 style="font-family:'Lobster',cursive;font-size:275%;color:rgb(62,146,190);">Forgot your password?</h1>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>

  <div class="form-group">
      <div class="col-lg-4 col-lg-offset-4">
          <%= f.email_field :email, autofocus: true , class: "form-control" , :style => "border: solid 1px white;", placeholder: "Email Address"%>
      </div>
  </div>

  <div class="form-group">
    <div class="col-lg-4 col-lg-offset-4">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary",:style => "border: none;color:white;width:100%;background-color:rgb(62,146,190);border-radius:50px;" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-4 col-lg-offset-4">
        <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
